@model EventEase1.Models.Venue

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        body {
            background-color: #f7c9e2; /* Baby pink background */
            color: #333;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Main title styling */
        h1 {
            color: #ff66b3; /* Pink color */
            text-align: center;
            font-size: 3rem;
            margin-top: 50px;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        }

        h3 {
            color: #ff66b3; /* Pink color */
            font-size: 2rem;
            text-align: center;
        }

        /* Form container styling */
        .form-container {
            margin-top: 30px;
            background-color: #fff; /* White background for the form */
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Details styling */
        .dl-horizontal dt {
            font-weight: bold;
            color: #ff66b3;
        }

        .dl-horizontal dd {
            color: #333;
        }

        /* Button styling */
        .btn-danger {
            background-color: #ff4d6b; /* Dark pink for delete button */
            color: white;
            font-weight: bold;
            padding: 10px 20px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 1.2rem;
        }

            .btn-danger:hover {
                background-color: #cc3366; /* Darker pink on hover */
            }

        /* Back Link Styling */
        .back-link {
            display: block;
            text-align: center;
            margin-top: 30px;
            font-size: 1.2rem;
            color: #ff66b3;
            text-decoration: none;
        }

            .back-link:hover {
                color: #cc3399; /* Darker pink for hover */
            }

    </style>
</head>
<body>

    <!-- Main Title -->
    <h1>Delete Venue</h1>

    <!-- Confirmation Section -->
    <h3>Are you sure you want to delete this?</h3>
    <div class="form-container">
        <h4>Venue Details</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.VenueName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.VenueName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Location)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Location)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Capacity)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Capacity)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ImageUrl)
            </dd>
        </dl>

        <!-- Deletion Form -->
        <form asp-action="Delete">
            <input type="hidden" asp-for="VenueId" />
            <div>
                <input type="submit" value="Delete" class="btn-danger" />
            </div>
            <div>
                <a asp-action="Index" class="back-link">Back to List</a>
            </div>
        </form>
    </div>

</body>
</html>
