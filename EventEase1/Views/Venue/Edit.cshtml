@model EventEase1.Models.Venue

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        body {
            background-color: #f7c9e2; /* Baby pink background */
            color: #333;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Main title styling */
        h1 {
            color: #ff66b3; /* Pink color */
            text-align: center;
            font-size: 3rem;
            margin-top: 50px;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        }

        /* Venue Edit Header */
        h4 {
            color: #ff66b3; /* Pink color */
            font-size: 2rem;
            text-align: center;
        }

        /* Form Container Styling */
        .form-container {
            background-color: #fff; /* White background */
            margin: 30px auto;
            border-radius: 10px;
            padding: 20px;
            width: 60%;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Input field styling */
        .form-group label {
            color: #ff66b3; /* Pink color */
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ff66b3;
            padding: 10px;
            width: 100%;
        }

            .form-control:focus {
                border-color: #ff3399; /* Darker pink on focus */
                box-shadow: 0 0 5px rgba(255, 51, 153, 0.5);
            }

        .btn-primary {
            background-color: #ff66b3; /* Pink button */
            border-color: #ff66b3;
            color: white;
        }

            .btn-primary:hover {
                background-color: #cc3399; /* Darker pink on hover */
                border-color: #cc3399;
            }

        /* Action Link Styling */
        .action-links {
            text-align: center;
            margin-top: 30px;
            font-size: 1.2rem;
        }

            .action-links a {
                color: #ff66b3;
                font-weight: bold;
                text-decoration: none;
                padding: 10px;
            }

                .action-links a:hover {
                    color: #cc3399; /* Darker pink on hover */
                }

    </style>
</head>
<body>

    <!-- Main Title -->
    <h1>Edit Venue</h1>

    <!-- Venue Edit Form Section -->
    <div class="form-container">
        <h4>Update Venue Information</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="VenueId" />

            <!-- Venue Name -->
            <div class="form-group">
                <label asp-for="VenueName" class="control-label">Venue Name</label>
                <input asp-for="VenueName" class="form-control" />
                <span asp-validation-for="VenueName" class="text-danger"></span>
            </div>

            <!-- Location -->
            <div class="form-group">
                <label asp-for="Location" class="control-label">Location</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <!-- Capacity -->
            <div class="form-group">
                <label asp-for="Capacity" class="control-label">Capacity</label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <!-- Image URL -->
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Image URL</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <!-- Back to List Link -->
    <div class="action-links">
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>