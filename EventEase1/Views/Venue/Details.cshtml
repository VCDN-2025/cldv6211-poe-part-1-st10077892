@model EventEase1.Models.Venue

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        body {
            background-color: #f7c9e2; /* Baby pink background */
            color: #333;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Main title styling */
        h1 {
            color: #ff66b3; /* Pink color */
            text-align: center;
            font-size: 3rem;
            margin-top: 50px;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        }

        /* Venue Details Header */
        h4 {
            color: #ff66b3; /* Pink color */
            font-size: 2rem;
            text-align: center;
        }

        /* Details container styling */
        .details-container {
            background-color: #fff; /* White background */
            margin: 30px auto;
            border-radius: 10px;
            padding: 20px;
            width: 80%;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Details styling */
        .dl-horizontal dt {
            font-weight: bold;
            color: #ff66b3;
        }

        .dl-horizontal dd {
            color: #333;
        }

        /* Link Styling */
        .action-links {
            text-align: center;
            margin-top: 30px;
            font-size: 1.2rem;
        }

            .action-links a {
                color: #ff66b3;
                font-weight: bold;
                text-decoration: none;
                padding: 10px;
            }

                .action-links a:hover {
                    color: #cc3399; /* Darker pink on hover */
                }

    </style>
</head>
<body>

    <!-- Main Title -->
    <h1>Venue Details</h1>

    <!-- Venue Details Section -->
    <div class="details-container">
        <h4>Venue Information</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.VenueName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.VenueName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Location)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Location)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Capacity)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Capacity)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ImageUrl)
            </dd>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Venue Image" class="img-fluid" />
            }

        </dl>
    </div>

    <!-- Action Links Section -->
    <div class="action-links">
        <a asp-action="Edit" asp-route-id="@Model?.VenueId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>