@model EventEase1.Models.Event

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        body {
            background-color: #f7c9e2; /* Baby pink background */
            color: #333;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Main title styling */
        h1 {
            color: #ff66b3; /* Pink color */
            text-align: center;
            font-size: 3rem;
            margin-top: 50px;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        }

        /* Event Create Header */
        h4 {
            color: #ff66b3; /* Pink color */
            font-size: 2rem;
            text-align: center;
        }

        /* Form Container Styling */
        .form-container {
            background-color: #fff; /* White background */
            margin: 30px auto;
            border-radius: 10px;
            padding: 20px;
            width: 60%;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Input field styling */
        .form-group label {
            color: #ff66b3; /* Pink color */
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ff66b3;
            padding: 10px;
            width: 100%;
        }

            .form-control:focus {
                border-color: #ff3399; /* Darker pink on focus */
                box-shadow: 0 0 5px rgba(255, 51, 153, 0.5);
            }

        .btn-primary {
            background-color: #ff66b3; /* Pink button */
            border-color: #ff66b3;
            color: white;
        }

            .btn-primary:hover {
                background-color: #cc3399; /* Darker pink on hover */
                border-color: #cc3399;
            }

        /* Action Link Styling */
        .action-links {
            text-align: center;
            margin-top: 30px;
            font-size: 1.2rem;
        }

            .action-links a {
                color: #ff66b3;
                font-weight: bold;
                text-decoration: none;
                padding: 10px;
            }

                .action-links a:hover {
                    color: #cc3399; /* Darker pink on hover */
                }

    </style>
</head>
<body>

    <!-- Main Title -->
    <h1>Create Event</h1>

    <!-- Event Create Form Section -->
    <div class="form-container">
        <h4>Enter Event Information</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Event Name -->
            <div class="form-group">
                <label asp-for="EventName" class="control-label">Event Name</label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>

            <!-- Event Date -->
            <div class="form-group">
                <label asp-for="EventDate" class="control-label">Event Date</label>
                <input asp-for="EventDate" class="form-control" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="imageFile">Upload Image</label>
                <input type="file" name="imageFile" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Create</button>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <!-- Back to List Link -->
    <div class="action-links">
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>