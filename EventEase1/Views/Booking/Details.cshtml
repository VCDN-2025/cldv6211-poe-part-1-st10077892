@model EventEase1.Models.Booking

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        body {
            background-color: #f7c9e2; /* Baby pink background */
            color: #333;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Main title styling */
        h1 {
            color: #ff66b3; /* Pink color */
            text-align: center;
            font-size: 3rem;
            margin-top: 50px;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        }

        h4 {
            color: #ff66b3; /* Pink color */
            font-size: 2rem;
            text-align: center;
        }

        /* Description list styling */
        dl.row {
            margin-top: 20px;
            background-color: #fff; /* White background for the details section */
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
        }

        dt {
            font-weight: bold;
        }

        dd {
            margin-bottom: 15px;
        }

        /* Back and Edit Links Styling */
        .action-links {
            text-align: center;
            margin-top: 30px;
            font-size: 1.2rem;
        }

            .action-links a {
                color: #ff66b3;
                text-decoration: none;
                padding: 10px;
                border-radius: 10px;
            }

                .action-links a:hover {
                    color: #cc3399; /* Darker pink on hover */
                    background-color: #f7c9e2; /* Baby pink background for hover */
                }
    </style>
</head>
<body>

    <!-- Main Title -->
    <h1>Booking Details</h1>

    <!-- Booking Details Section -->
    <div>
        <h4>Booking Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EventId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EventId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VenueId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VenueId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookingDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookingDate)
            </dd>
        </dl>
    </div>

    <!-- Action Links (Edit and Back) -->
    <div class="action-links">
        <a asp-action="Edit" asp-route-id="@Model?.BookingId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
