@model EventEase1.Models.Booking

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        body {
            background-color: #f7c9e2; /* Baby pink background */
            color: #333;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Main title styling */
        h1 {
            color: #ff66b3; /* Pink color */
            text-align: center;
            font-size: 3rem;
            margin-top: 50px;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        }

        h4 {
            color: #ff66b3; /* Pink color */
            font-size: 2rem;
            text-align: center;
        }

        /* Form styling */
        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                color: #333;
                font-weight: bold;
            }

        .form-control {
            border-radius: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            width: 100%;
        }

            .form-control:focus {
                border-color: #ff66b3; /* Pink border when focused */
                box-shadow: 0 0 5px rgba(255, 102, 179, 0.5);
            }

        .btn-primary {
            background-color: #ff66b3; /* Pink button */
            color: white;
            font-weight: bold;
            padding: 10px 20px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            width: 100%;
            font-size: 1.2rem;
        }

            .btn-primary:hover {
                background-color: #cc3399; /* Darker pink on hover */
            }

        .text-danger {
            color: #ff4d6b; /* Dark pink for error messages */
        }

        /* Back Link Styling */
        .back-link {
            display: block;
            text-align: center;
            margin-top: 30px;
            font-size: 1.2rem;
            color: #ff66b3;
            text-decoration: none;
        }

            .back-link:hover {
                color: #cc3399; /* Darker pink for hover */
            }

    </style>
</head>
<body>

    <!-- Main Title -->
    <h1>Edit Booking</h1>

    <!-- Form Section -->
    <div>
        <h4>Booking Information</h4>
        <hr />
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="BookingId" />

                    <!-- EventId Input -->
                    <div class="form-group">
                        <label asp-for="EventId" class="control-label">Event</label>
                        <input asp-for="EventId" class="form-control" />
                        <span asp-validation-for="EventId" class="text-danger"></span>
                    </div>

                    <!-- VenueId Input -->
                    <div class="form-group">
                        <label asp-for="VenueId" class="control-label">Venue</label>
                        <input asp-for="VenueId" class="form-control" />
                        <span asp-validation-for="VenueId" class="text-danger"></span>
                    </div>

                    <!-- BookingDate Input -->
                    <div class="form-group">
                        <label asp-for="BookingDate" class="control-label">Booking Date</label>
                        <input asp-for="BookingDate" class="form-control" />
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                    </div>

                    <!-- Save Button -->
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Back Link -->
    <div>
        <a asp-action="Index" class="back-link">Back to List</a>
    </div>

</body>
</html>