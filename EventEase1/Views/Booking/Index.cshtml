@model IEnumerable<EventEase1.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        body {
            background-color: #f7c9e2; /* Baby pink background */
            color: #333;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Main title styling */
        h1 {
            color: #ff66b3; /* Pink color */
            text-align: center;
            font-size: 3rem;
            margin-top: 50px;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        }

        /* Paragraph and link styling */
        p {
            text-align: center;
            font-size: 1.2rem;
            margin-top: 20px;
        }

        a {
            color: #ff66b3; /* Pink color */
            text-decoration: none;
            font-weight: bold;
        }

            a:hover {
                color: #cc3399; /* Darker pink for hover effect */
            }

        /* Table styling */
        .table {
            width: 90%;
            margin: 30px auto;
            background-color: #fff; /* White table background */
            border-collapse: collapse;
            border-radius: 10px;
            overflow: hidden; /* Rounded corners for the table */
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Soft shadow for table */
        }

            .table th, .table td {
                padding: 15px;
                text-align: center;
                border: 1px solid #ddd;
            }

            .table th {
                background-color: #ff66b3; /* Pink header */
                color: white;
                font-weight: bold;
            }

            .table tr:nth-child(even) {
                background-color: #f7f7f7; /* Light gray background for even rows */
            }

            .table tr:hover {
                background-color: #ffe6f0; /* Light pink hover effect */
            }

            .table td a {
                color: #000; /* Black color for links in table */
                text-decoration: none;
            }

                .table td a:hover {
                    color: #ff66b3; /* Pink color on hover */
                }

        /* Original Simple White Footer */
        footer {
            background-color: #fff; /* White footer */
            color: #000; /* Black text */
            text-align: center;
            padding: 10px 0;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        .footer-text {
            margin: 0;
            font-size: 0.9rem;
        }

    </style>
</head>
<body>

    <!-- Main Title -->
    <h1>Bookings</h1>

    <!-- Create New Booking Link -->
    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <!-- Bookings Table -->
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EventId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VenueId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookingDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VenueId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookingDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BookingId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.BookingId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Original Simple White Footer -->
   

</body>
</html>
